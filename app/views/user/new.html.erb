<html>
<body>
  <% if flash[:danger] %>
    <div class="alert alert-danger">
      <%= flash[:danger] %>
    </div>
  <% end %>
  
  <div class="container mt-5">
    <h1 class="mb-4">Register yourself on this wonderful Gossiping website!</h1>
    <%= form_tag user_index_path, method: :post do %>
      <div class="form-group">
        <%= label_tag :age, "Age" %>
        <%= text_field_tag 'user[age]', rand(1..10), class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :first_name, "First name" %>
        <%= text_field_tag 'user[first_name]', Faker::Name.first_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :last_name, "Last name" %>
        <%= text_field_tag 'user[last_name]', Faker::Name.last_name, class: 'form-control' %>
      </div>
      <div class="form-group">
      <%= label_tag :city_id, "City ID (Number between 1 and 10)" %>
      <%= number_field_tag 'user[city_id]', nil, class: 'form-control', min: 1, max: 10 %>
      </div>
      <div class="form-group">
        <%= label_tag :email, "E-mail" %>
        <%= email_field_tag 'user[email]', nil, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :password, "Password" %>
        <%= password_field_tag 'user[password]', nil, class: 'form-control' %>
      </div>
      <%= submit_tag "Create User", class: 'btn btn-primary' %>
    <% end %>
  </div>

</body>
</html>